{
  "manifest_version": 1,
  "id": "modbus-adapter",
  "name": "Modbus",
  "short_name": "Modbus",
  "version": "0.4.0",
  "description": "Connect your Modbus devices",
  "homepage_url": "https://github.com/tim-hellhake/modbus-adapter#readme",
  "license": "MPL-2.0",
  "author": "Tim Hellhake",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "strict_min_version": "0.10.0",
      "strict_max_version": "*",
      "primary_type": "adapter"
    }
  },
  "options": {
    "schema": {
      "type": "object",
      "properties": {
        "rtuAdapter": {
          "type": "array",
          "title": "List of RTU adapters",
          "items": {
            "type": "object",
            "title": "RTU adapter",
            "required": [
              "serialPort",
              "baudRate",
              "pollInterval"
            ],
            "properties": {
              "id": {
                "type": "string",
                "title": "The ID of the RTU adapter (will be generated for you)",
                "readOnly": true
              },
              "serialPort": {
                "type": "string",
                "title": "The serial port of the adapter"
              },
              "baudRate": {
                "type": "integer",
                "title": "The baud rate of the adapter"
              },
              "pollInterval": {
                "type": "integer",
                "title": "The poll interval in seconds"
              },
              "devices": {
                "type": "array",
                "title": "List of devices",
                "items": {
                  "type": "object",
                  "title": "RTU device",
                  "required": [
                    "name",
                    "address"
                  ],
                  "properties": {
                    "id": {
                      "type": "string",
                      "title": "The ID of the device (will be generated for you)",
                      "readOnly": true
                    },
                    "name": {
                      "type": "string",
                      "title": "The name of the device"
                    },
                    "capabilities": {
                      "type": "array",
                      "title": "The list of capabilities of the device",
                      "items": {
                        "type": "string",
                        "title": "One of the capabilities of the device (https://iot.mozilla.org/schemas)",
                        "enum": [
                          "Alarm",
                          "AirQualitySensor",
                          "BarometricPressureSensor",
                          "BinarySensor",
                          "Camera",
                          "ColorControl",
                          "ColorSensor",
                          "DoorSensor",
                          "EnergyMonitor",
                          "HumiditySensor",
                          "LeakSensor",
                          "Light",
                          "Lock",
                          "MotionSensor",
                          "MultiLevelSensor",
                          "MultiLevelSwitch",
                          "OnOffSwitch",
                          "PushButton",
                          "SmartPlug",
                          "SmokeSensor",
                          "TemperatureSensor",
                          "Thermostat",
                          "VideoCamera"
                        ]
                      }
                    },
                    "address": {
                      "type": "string",
                      "pattern": "^[a-fA-F0-9]{1,4}$",
                      "title": "The address of the device (hex)"
                    },
                    "bits": {
                      "type": "array",
                      "title": "List of bits",
                      "items": {
                        "type": "object",
                        "title": "Modbus bit",
                        "required": [
                          "name",
                          "address",
                          "type"
                        ],
                        "properties": {
                          "id": {
                            "type": "string",
                            "title": "The ID of the bit (will be generated for you)",
                            "readOnly": true
                          },
                          "name": {
                            "type": "string",
                            "title": "The name of the resulting property"
                          },
                          "address": {
                            "type": "string",
                            "pattern": "^[a-fA-F0-9]{1,4}$",
                            "title": "The address of the bit (hex)"
                          },
                          "type": {
                            "type": "string",
                            "title": "The type of the bit (function name)",
                            "enum": [
                              "DiscreteInput",
                              "Coil"
                            ]
                          }
                        }
                      }
                    },
                    "registers": {
                      "type": "array",
                      "title": "List of registers",
                      "items": {
                        "type": "object",
                        "title": "Modbus register",
                        "required": [
                          "name",
                          "address",
                          "type",
                          "encoding"
                        ],
                        "properties": {
                          "id": {
                            "type": "string",
                            "title": "The ID of the register (will be generated for you)",
                            "readOnly": true
                          },
                          "name": {
                            "type": "string",
                            "title": "The name of the resulting property"
                          },
                          "propertyType": {
                            "type": "string",
                            "title": "The type of the property (https://iot.mozilla.org/schemas/#capabilities)",
                            "enum": [
                              "AlarmProperty",
                              "BarometricPressureProperty",
                              "BooleanProperty",
                              "BrightnessProperty",
                              "ColorModeProperty",
                              "ColorProperty",
                              "ColorTemperatureProperty",
                              "ConcentrationProperty",
                              "CurrentProperty",
                              "DensityProperty",
                              "FrequencyProperty",
                              "HeatingCoolingProperty",
                              "HumidityProperty",
                              "ImageProperty",
                              "InstantaneousPowerFactorProperty",
                              "InstantaneousPowerProperty",
                              "LeakProperty",
                              "LevelProperty",
                              "LockedProperty",
                              "MotionProperty",
                              "OnOffProperty",
                              "OpenProperty",
                              "PushedProperty",
                              "SmokeProperty",
                              "TargetTemperatureProperty",
                              "TemperatureProperty",
                              "ThermostatModeProperty",
                              "VideoProperty",
                              "VoltageProperty"
                            ]
                          },
                          "unit": {
                            "type": "string",
                            "title": "The SI unit of the value"
                          },
                          "minimum": {
                            "type": "number",
                            "title": "The minimum value"
                          },
                          "maximum": {
                            "type": "number",
                            "title": "The maximum value"
                          },
                          "address": {
                            "type": "string",
                            "pattern": "^[a-fA-F0-9]{1,4}$",
                            "title": "The address of the register (hex)"
                          },
                          "type": {
                            "type": "string",
                            "title": "The type of the register (function name)",
                            "enum": [
                              "Input",
                              "Holding"
                            ]
                          },
                          "encoding": {
                            "type": "string",
                            "title": "The encoding of the value",
                            "enum": [
                              "Int16",
                              "UInt32",
                              "Int32",
                              "Float32"
                            ]
                          },
                          "divisor": {
                            "type": "number",
                            "title": "A divisor to compensate for device side multiplicators (Example: 10 if the device reports 313째C instead of 31,1째C"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "tcpAdapter": {
          "type": "array",
          "title": "List of TCP adapters",
          "items": {
            "type": "object",
            "title": "TCP adapter",
            "required": [
              "host",
              "port",
              "pollInterval"
            ],
            "properties": {
              "id": {
                "type": "string",
                "title": "The ID of the adapter (will be generated for you)",
                "readOnly": true
              },
              "host": {
                "type": "string",
                "title": "The hostname or IP address of the adapter"
              },
              "port": {
                "type": "integer",
                "title": "The port of the adapter  (default is 502)"
              },
              "pollInterval": {
                "type": "integer",
                "title": "The poll interval in seconds"
              },
              "devices": {
                "type": "array",
                "title": "List of devices",
                "items": {
                  "type": "object",
                  "title": "TCP device",
                  "required": [
                    "name",
                    "address"
                  ],
                  "properties": {
                    "id": {
                      "type": "string",
                      "title": "The ID of the device (will be generated for you)",
                      "readOnly": true
                    },
                    "name": {
                      "type": "string",
                      "title": "The name of the device"
                    },
                    "capabilities": {
                      "type": "array",
                      "title": "The list of capabilities of the device",
                      "items": {
                        "type": "string",
                        "title": "One of the capabilities of the device (https://iot.mozilla.org/schemas)",
                        "enum": [
                          "Alarm",
                          "AirQualitySensor",
                          "BarometricPressureSensor",
                          "BinarySensor",
                          "Camera",
                          "ColorControl",
                          "ColorSensor",
                          "DoorSensor",
                          "EnergyMonitor",
                          "HumiditySensor",
                          "LeakSensor",
                          "Light",
                          "Lock",
                          "MotionSensor",
                          "MultiLevelSensor",
                          "MultiLevelSwitch",
                          "OnOffSwitch",
                          "PushButton",
                          "SmartPlug",
                          "SmokeSensor",
                          "TemperatureSensor",
                          "Thermostat",
                          "VideoCamera"
                        ]
                      }
                    },
                    "address": {
                      "type": "string",
                      "pattern": "^[a-fA-F0-9]{1,4}$",
                      "title": "The address of the device (hex)"
                    },
                    "bits": {
                      "type": "array",
                      "title": "List of bits",
                      "items": {
                        "type": "object",
                        "title": "Modbus bit",
                        "required": [
                          "name",
                          "address",
                          "type"
                        ],
                        "properties": {
                          "id": {
                            "type": "string",
                            "title": "The ID of the bit (will be generated for you)",
                            "readOnly": true
                          },
                          "name": {
                            "type": "string",
                            "title": "The name of the resulting property"
                          },
                          "address": {
                            "type": "string",
                            "pattern": "^[a-fA-F0-9]{1,4}$",
                            "title": "The address of the bit (hex)"
                          },
                          "type": {
                            "type": "string",
                            "title": "The type of the bit (function name)",
                            "enum": [
                              "DiscreteInput",
                              "Coil"
                            ]
                          }
                        }
                      }
                    },
                    "registers": {
                      "type": "array",
                      "title": "List of registers",
                      "items": {
                        "type": "object",
                        "title": "Modbus register",
                        "required": [
                          "name",
                          "address",
                          "type",
                          "encoding"
                        ],
                        "properties": {
                          "id": {
                            "type": "string",
                            "title": "The ID of the register (will be generated for you)",
                            "readOnly": true
                          },
                          "name": {
                            "type": "string",
                            "title": "The name of the resulting property"
                          },
                          "propertyType": {
                            "type": "string",
                            "title": "The type of the property (https://iot.mozilla.org/schemas/#capabilities)",
                            "enum": [
                              "AlarmProperty",
                              "BarometricPressureProperty",
                              "BooleanProperty",
                              "BrightnessProperty",
                              "ColorModeProperty",
                              "ColorProperty",
                              "ColorTemperatureProperty",
                              "ConcentrationProperty",
                              "CurrentProperty",
                              "DensityProperty",
                              "FrequencyProperty",
                              "HeatingCoolingProperty",
                              "HumidityProperty",
                              "ImageProperty",
                              "InstantaneousPowerFactorProperty",
                              "InstantaneousPowerProperty",
                              "LeakProperty",
                              "LevelProperty",
                              "LockedProperty",
                              "MotionProperty",
                              "OnOffProperty",
                              "OpenProperty",
                              "PushedProperty",
                              "SmokeProperty",
                              "TargetTemperatureProperty",
                              "TemperatureProperty",
                              "ThermostatModeProperty",
                              "VideoProperty",
                              "VoltageProperty"
                            ]
                          },
                          "unit": {
                            "type": "string",
                            "title": "The SI unit of the value"
                          },
                          "minimum": {
                            "type": "number",
                            "title": "The minimum value"
                          },
                          "maximum": {
                            "type": "number",
                            "title": "The maximum value"
                          },
                          "address": {
                            "type": "string",
                            "pattern": "^[a-fA-F0-9]{1,4}$",
                            "title": "The address of the register (hex)"
                          },
                          "type": {
                            "type": "string",
                            "title": "The type of the register (function name)",
                            "enum": [
                              "Input",
                              "Holding"
                            ]
                          },
                          "encoding": {
                            "type": "string",
                            "title": "The encoding of the value",
                            "enum": [
                              "Int16",
                              "UInt32",
                              "Int32",
                              "Float32"
                            ]
                          },
                          "divisor": {
                            "type": "number",
                            "title": "A divisor to compensate for device side multiplicators (Example: 10 if the device reports 313째C instead of 31,1째C"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
